	<description>MODULE_ARIQUIZUSERRESULT</description>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.mod_ariquizuserresult.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.mod_ariquizuserresult.sys.ini</language>
	</languages>
	<files>
		<filename module="mod_ariquizuserresult">mod_ariquizuserresult.php</filename>
		<filename>mod_ariquizuserresult.xml</filename>
		<filename>module.php</filename>
		<filename>index.html</filename>
		<folder>assets</folder>
		<folder>tmpl</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="moduleclass_sfx" type="text" default="" label="MOD_ARIQUIZUSERRESULT_CLASSSUFFIX" description="PARAMMODULECLASSSUFFIX" />
				<field name="label" type="text" default="" label="MOD_ARIQUIZUSERRESULT_LABEL" description="MOD_ARIQUIZUSERRESULT_DESCR_LABEL" />
				<field name="count" type="text" default="5" label="MOD_ARIQUIZUSERRESULT_COUNT" description="MOD_ARIQUIZUSERRESULT_DESCR_COUNT" />
				<field name="pointUnit" type="list" default="percent" label="MOD_ARIQUIZUSERRESULT_MEASUREUNIT" description="MOD_ARIQUIZUSERRESULT_DESCR_MEASUREUNIT">
					<option value="percent">MOD_ARIQUIZUSERRESULT_PERCENT</option> 
					<option value="point">MOD_ARIQUIZUSERRESULT_POINT</option> 
				</field>
				<field name="showQuizLink" type="list" default="0" label="MOD_ARIQUIZUSERRESULT_SHOWQUIZLINK" description="MOD_ARIQUIZUSERRESULT_DESCR_SHOWQUIZLINK">
					<option value="0">MOD_ARIQUIZUSERRESULT_NO</option> 
					<option value="1">MOD_ARIQUIZUSERRESULT_YES</option> 
				</field>
				<field name="addMenuItemToLink" type="list" default="0" label="MOD_ARIQUIZUSERRESULT_ADDITEMIDTOLINK" description="MOD_ARIQUIZUSERRESULT_DESCR_ADDITEMIDTOLINK">
					<option value="0">MOD_ARIQUIZUSERRESULT_NO</option> 
					<option value="1">MOD_ARIQUIZUSERRESULT_YES</option> 
				</field>
				<field name="itemId" type="menuItem" default="" label="MOD_ARIQUIZUSERRESULT_MENUITEM" description="MOD_ARIQUIZUSERRESULT_DESCR_MENUITEM" />
				<field name="emptyMessage" type="textarea" rows="3" cols="45" default="" label="MOD_ARIQUIZUSERRESULT_EMPTYMESSAGE" description="MOD_ARIQUIZUSERRESULT_DESCR_EMPTYMESSAGE" />
			</fieldset>
		</fields>
	</config>
</extension>