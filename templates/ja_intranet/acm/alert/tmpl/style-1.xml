<?xml version="1.0" encoding="utf-8"?>
<form>
  <title>Alert Style 1</title>
	<sampledata></sampledata>
  <fields name="alert-style">
    <fieldset name="basic" label="ALERT_BASIC_LABEL" description="ALERT_BASIC_DESC" > 
      <field name="alert-message" type="textarea" 
          label="ALERT_MESSAGE_LABEL"
          description="ALERT_MESSAGE_DESC" />
      <field name="alert-status" type="list" default="warning"
          label="ALERT_STATUS_LABEL"
          description="ALERT_STATUS_DESC" >
          <option value="warning">Warning</option>
          <option value="danger">Danger</option>
          <option value="success">Success</option>
          <option value="dismissable">Dismissable</option>
          <option value="info">Info</option>
      </field>
    </fieldset>
  </fields>
</form>